datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String?
  createdAt DateTime   @default(now())
  CarPrice  CarPrice[]
}

model Car {
  id           Int        @id @default(autoincrement())
  manufacturer String
  model        String
  year         String
  fuel         String
  gear         String
  latitude     String
  longitude    String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  informedby   Int
  published    Boolean    @default(true)
  CarPrice     CarPrice[]
}

model CarPrice {
  uid         Int      @id @default(autoincrement())
  car         Car?     @relation(fields: [carId], references: [id])
  carId       Int?
  departament String
  city        String
  latitude    String
  longitude   String
  sale        String
  fuel        String
  gear        String
  color       String
  price       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  informedby  Int
  published   Boolean  @default(true)
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}
